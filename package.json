{
  "name": "@glyphdev/api",
  "description": "glyph api",
  "version": "0.0.0",
  "homepage": "https://github.com/glyphdev/api",
  "repository": "https://github.com/glyphdev/api.git",
  "bugs": "https://github.com/glyphdev/api/issues",
  "author": {
    "name": "Lexus Drumgold",
    "url": "https://github.com/unicornware"
  },
  "type": "module",
  "files": [
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "Dockerfile",
    "README.md",
    "docker-compose.yml",
    "src"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./types": "./src/types.mts"
  },
  "imports": {
    "#app": "./src/app.mts",
    "#enums/*": "./src/enums/*.mts",
    "#fixtures/*": "./__fixtures__/*.mts",
    "#hooks/*": "./src/hooks/*.mts",
    "#interfaces/*": "./src/interfaces/*.mts",
    "#models/*": "./src/models/*.mts",
    "#modules/*": "./src/modules/*.mts",
    "#tests/*": "./__tests__/*.mts",
    "#types/*": "./src/types/*.mts"
  },
  "scripts": {
    "build": "yarn clean:build; tsc -p tsconfig.build.json --noEmit false",
    "build:image": "docker build --build-arg NEST_DEBUG=1 --tag ghcr.io/glyphdev/api:build .",
    "check:ci": "yarn dedupe --check && yarn check:format && yarn check:lint && yarn check:spelling && yarn typecheck && yarn test:cov && yarn pack && yarn clean:pack",
    "check:format": "dprint check --incremental=false",
    "check:lint": "eslint --exit-on-fatal-error --max-warnings 0 .",
    "check:spelling": "cspell lint --color --no-progress --relative $@ \"**\"",
    "check:types": "tsc -p tsconfig.typecheck.json",
    "check:upgrades": "yarn upgrade-interactive",
    "clean:build": "trash \"./{dist,*.tgz}\"",
    "clean:modules": "trash ./.yarn/{cache,*.gz} ./node_modules",
    "clean:pack": "trash \"./*.tgz\"",
    "clean:test": "trash ./coverage && trash __tests__/reports",
    "commitlint": "commitlint -V",
    "docker:prune": "docker system prune -f",
    "fix:cg": "yarn fix:format && yarn fix:lint",
    "fix:dedupe": "yarn dedupe --strategy=highest",
    "fix:format": "dprint fmt",
    "fix:lint": "yarn check:lint --cache --fix",
    "postinstall": "[ -f ./node_modules/.bin/husky ] && chmod +x .husky/* && husky || exit 0",
    "postpack": "toggle-scripts +postinstall",
    "prepack": "toggle-scripts -postinstall",
    "release": "bash ./scripts/release.sh",
    "remark": "remark .",
    "serve": "cross-env PORT=9000 bun run ./src/main.mts",
    "serve:watch": "bun run --watch ./src/main.mts",
    "start": "docker run --rm --env NEST_DEBUG=1 -itp 4000:4000 ghcr.io/glyphdev/api:build",
    "start:dev": "cross-env PORT=8080 docker compose up",
    "test": "yarn clean:build; cross-env NODE_OPTIONS=\"--experimental-strip-types --experimental-transform-types\" vitest run",
    "test:cov": "yarn test --coverage",
    "test:cov:reports": "yarn test:cov --merge-reports --mode=reports",
    "test:reports": "yarn test --merge-reports --mode=reports",
    "typecheck": "yarn test --typecheck --mode=typecheck"
  },
